<%= render 'shared/errors', obj: @category %>

<%= form_with model: @category, data: {turbo: false} do |f| %>
    <div class="col-3">
        <%= f.label :name, class:"form-label" %> <br>
    </div>
    <div class="col-3">
        <%= f.text_field :name, class:"form-control" %> <br> <br>
    </div>
    <div class="col-3">
        <%= f.submit class: "btn btn-primary" %>
    </div>
<% end %>
