<% if @article.errors.any? %>
<h3>There are some errors</h3>
<ul>
    <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
</ul>
<% end %>


<%= form_with model: @article, data: {turbo: false} do |f| %>
    <div class="col-3">
        <%= f.label :title, class:"form-label" %> <br>
    </div>
    <div class="col-3">
        <%= f.text_field :title, class:"form-control" %> <br> <br>
    </div>
    <div class="col-3">
        <%= f.label :description, class:"form-label" %> <br>
    </div>
    <div class="col-3">
        <%= f.text_area :description, class:"form-control" %> <br> <br>
    </div>
    <div class="col-3">
        <%= f.submit class: "btn btn-primary" %>
    </div>
<% end %>

