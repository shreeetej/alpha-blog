<%= render 'shared/errors', obj: @article %>

<%= form_with model: @article, data: {turbo: false} do |f| %>
    <div class="col-3">
        <%= f.label :title, class:"form-label" %> <br>
    </div>
    <div class="col-3">
        <%= f.text_field :title, class:"form-control" %> <br> <br>
    </div>
    <div class="col-3">
        <%= f.label :description, class:"form-label" %> <br>
    </div>
    <div class="col-3">
        <%= f.text_area :description, class:"form-control" %> <br> <br>
    </div>
    <div class="col-3">
        <%= f.label :category, class:"form-label" %> <br>
    </div>
    <div class="col-3 ">
        <%= f.collection_select :category_ids, Category.all, :id, :name , {prompt: "Select category (optional)"} , {class: 'form-select', multiple: true} %> <br> <br>
    </div>
    <div class="col-3">
        <%= f.submit class: "btn btn-primary" %>
    </div>
<% end %>

